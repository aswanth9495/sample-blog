<h1> <%= @post.title %> </h1>
<p> <%= @post.body %></p>
<%= link_to "Edit", edit_post_path(@post), :class => "some-random" %>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'are you sure?' }, :class => "some-random" %>
<!-- make this partial -->
<% @post.comments.each do |comment| %>
  <b> <%= comment.username %> </b>
  <p> <%= comment.body %> </p>
<% end %>
<!--  make this partial -->
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :body , {:class => "form-control"}%><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %><br>
  </p>
<% end %>